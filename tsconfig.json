{
  "include": ["./src", "./example", "./test"],

  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2019", "dom.iterable", "scripthost"],
    "allowJs": true,
    // "declarationDir": "types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
